{
	"include": ["./src/"],
	"compilerOptions": {
		"strict": true,
		"target": "ES2015",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"isolatedModules": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"declaration": true,
		"removeComments": true,
		"outDir": "./dist"
	},
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
